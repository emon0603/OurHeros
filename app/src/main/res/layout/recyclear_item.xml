<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D5D4D4"
    android:orientation="vertical"

    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/detailsbt"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_5sdp"
            >




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/imagetv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/mir_mugdho"
                    android:scaleType="fitXY"
                    />


                <TextView
                    android:id="@+id/idnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="@dimen/_20sdp"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:background="@color/red"

                    />





            </RelativeLayout>

        <TextView
            android:id="@+id/nametv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="সাকিব হাসান"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

            <TextView
                android:id="@+id/profetv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="শিক্ষাথী"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"


                />

            <TextView
                android:id="@+id/nameofversitytv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="আর,কে চোধূরী স্কুল এন্ড কলেজ, সায়েদাবাদ, যাত্রাবাড়ী, ঢাকা"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"

                />

            <TextView
                android:id="@+id/dateofdeadtv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16 July 2024"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"

                />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>



</LinearLayout>